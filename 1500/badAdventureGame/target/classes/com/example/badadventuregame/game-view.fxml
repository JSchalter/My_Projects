<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="453.0" minWidth="735.0" prefHeight="453.0" prefWidth="735.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.badadventuregame.GameController">
    <children>
        <Button fx:id="up" disable="true" layoutX="274.0" layoutY="178.0" mnemonicParsing="false" onAction="#onUp" text="↑">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Button>
        <Button fx:id="down" disable="true" layoutX="274.0" layoutY="247.0" mnemonicParsing="false" onAction="#onDown" text="↓">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Button>
        <Button fx:id="right" disable="true" layoutX="332.0" layoutY="213.0" mnemonicParsing="false" onAction="#onRight" text="→">
            <font>
                <Font size="32.0" />
            </font>
        </Button>
        <Button fx:id="left" disable="true" layoutX="204.0" layoutY="213.0" mnemonicParsing="false" onAction="#onLeft" text="←">
            <font>
                <Font name="System Bold" size="32.0" />
            </font>
        </Button>
        <Button fx:id="search" disable="true" layoutX="278.0" layoutY="31.0" mnemonicParsing="false" onAction="#onSearch" text="search" />
        <Button fx:id="fight" disable="true" layoutX="283.0" layoutY="63.0" mnemonicParsing="false" onAction="#onFight" text="fight" />
        <Button fx:id="run" disable="true" layoutX="272.0" layoutY="99.0" mnemonicParsing="false" onAction="#onRunAway" text="run away" />
        <Button fx:id="sleep" disable="true" layoutX="281.0" layoutY="134.0" mnemonicParsing="false" onAction="#onSleep" text="sleep" />
        <Button fx:id="start" layoutX="283.0" layoutY="325.0" mnemonicParsing="false" onAction="#onStart" text="start" />
        <Label layoutX="60.0" layoutY="91.0" text="player" />
        <VBox layoutX="53.0" layoutY="117.0" prefHeight="79.0" prefWidth="61.0">
            <children>
                <Label text="hit points" />
                <Label text="strength" />
                <Label text="dexterity" />
                <Label text="intelligence" />
                <Label text="total gold" />
            </children>
        </VBox>
        <VBox layoutX="125.0" layoutY="117.0">
            <children>
                <Label fx:id="hp" text="0" />
                <Label fx:id="st" text="0" />
                <Label fx:id="dx" text="0" />
                <Label fx:id="it" text="0" />
                <Label fx:id="tg" text="0" />
            </children>
        </VBox>
        <Label fx:id="gameStatus" alignment="CENTER" contentDisplay="CENTER" layoutX="81.0" layoutY="367.0" prefHeight="50.0" prefWidth="446.0" text="welcome to a bad adventure game">
            <font>
                <Font name="System Bold" size="16.0" />
            </font></Label>
        <Label fx:id="gamemap" alignment="CENTER" layoutX="448.0" layoutY="53.0" prefHeight="250.0" prefWidth="250.0" textAlignment="CENTER" />
    </children>
</AnchorPane>

